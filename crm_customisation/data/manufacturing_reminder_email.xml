<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="email_template_mo_reminder" model="mail.template">
        <field name="name">Manufacturing Order Reminder Email</field>
        <field name="model_id" ref="mrp.model_mrp_production"/>
        <field name="email_from">{{ user.email or 'noreply@example.com' }}</field>
        <field name="subject">Upcoming Production Completion â€“ {{ object.name }}</field>
        <field name="body_html" type="html">
            <div style="font-family:Arial, sans-serif; font-size:14px; color:#333;">
                <p>Dear <t t-out="object.sale_order_id.user_id.name or 'Salesperson'"/>,</p>

                <p>This is a kind reminder that the production for one of your customers is scheduled to be completed shortly. Please find the details below:</p>

                <ul>
                    <li><strong>Manufacturing Order:</strong> <t t-out="object.name"/></li>
                    <li><strong>Scheduled Completion Date:</strong> <t t-out="format_date(object.date_finished)"/></li>
                    <li><strong>Sales Order Reference:</strong> <t t-out="object.origin or 'N/A'"/></li>
                    <li><strong>Customer:</strong> <t t-out="object.sale_order_id.partner_id.name or 'N/A'"/></li>
                </ul>

                <t t-if="object.sale_order_id and object.sale_order_id.order_line">
                        <p><strong>Products Involved:</strong></p>
                        <table style="width:100%; border-collapse: collapse; color: black; font-family: Arial, sans-serif;">
                            <thead>
                                <tr>
                                    <th style="border-bottom: 1px solid #ddd; text-align: left; padding: 8px;">Product</th>
                                    <th style="border-bottom: 1px solid #ddd; text-align: left; padding: 8px;">Quantity</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="object.sale_order_id.order_line" t-as="line">
                                    <tr>
                                        <td style="padding: 8px;"><t t-out="line.product_id.display_name or 'N/A'"/></td>
                                        <td style="padding: 8px;"><t t-out="line.product_uom_qty or '0.0'"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>
                <t t-else="">
                    <p><strong>Products Involved:</strong> Not specified</p>
                </t>

                <p>This notification was sent a <t t-out="format_date(object.date_finished)"/> days before the expected completion date.</p>

                <p style="margin-top:20px;">Best regards,<br/>
                <strong><t t-out="object.company_id.name"/></strong><br/>
                Manufacturing Department</p>
            </div>
        </field>
        <field name="auto_delete" eval="False"/>
    </record>
</odoo>
