<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_product_category_form_inherit_raisin" model="ir.ui.view">
        <field name="name">product.category.form.raisin</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//sheet" position="inside">
                <group string="Calculation Template" groups="crm_spreadsheet_enhancement.group_cost_calculator">
                    <!-- Google Sheets Direct Sync -->
                    <label for="google_sheet_url" string="Google Sheet Integration"/>
                    <div class="o_row">
                        <field name="google_sheet_url" placeholder="https://docs.google.com/spreadsheets/d/..."/>
                        <button name="action_sync_google_sheet" type="object" string="Sync Now" 
                                class="btn-primary" icon="fa-cloud-download"
                                invisible="not google_sheet_url"/>
                    </div>
                    
                    <separator string="OR Manual Upload"/>
                    <!-- File Upload Section -->
                    <field name="template_file" filename="template_filename"/>
                    <field name="template_filename" invisible="1"/>
                    
                </group>
            </xpath>
        </field>
    </record>
</odoo>
