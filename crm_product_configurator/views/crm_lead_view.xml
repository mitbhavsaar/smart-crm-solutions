<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_crm_lead_form_inherit_product_configurator" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit.product.configurator</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm_customisation.view_crm_lead_form_inherit_custom_seq"/>
        <field name="arch" type="xml">
            <!-- Add existing fields from previous version -->
            <xpath expr="//field[@name='material_line_ids']/list/field[@name='product_template_id']" position="after">
                <field name="product_config_mode" column_invisible="1"/>
                <field name="product_custom_attribute_value_ids" column_invisible="1"/>
                <field name="attributes_json" widget="json" readonly="1" column_invisible="1"/>
            </xpath>
            
            
        </field>
    </record>
</odoo>